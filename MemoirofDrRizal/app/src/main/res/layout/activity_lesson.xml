<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:background="@drawable/bg1"
    tools:context=".lesson">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="529dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/lessonlist1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lesson !: Dr. Jose P. Rizal"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="@drawable/btnround"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <Button
                android:id="@+id/lessonlist2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lesson 2: Rizal Family"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="@drawable/btnround"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <Button
                android:id="@+id/lessonlist3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lesson 3: REARLY EDUCATION IN CALAMBA AND BIÃ‘AN"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="@drawable/btnround"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <Button
                android:id="@+id/lessonlist4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lesson 4: SCHOLASTIC TRIUMPHS AT ATENEO DE MANILA (1872-1877)"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="@drawable/btnround"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <Button
                android:id="@+id/lessonlist5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lesson 5: MEDICAL STUDIES AT THE UNIVERSITY OF SANTO TOMAS (1877-1882)"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="@drawable/btnround"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <Button
                android:id="@+id/lessonlist6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lesson 6: IN SUNNY SPAIN (1882-1885)"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="@drawable/btnround"
                android:gravity="center_vertical"
                android:paddingLeft="15dp" />
            <Button
                android:id="@+id/lessonlist7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lesson 7: LIFE IN MADRID"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="@drawable/btnround"
                android:gravity="center_vertical"
                android:paddingLeft="15dp" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Life Lesson "
        android:textSize="50dp"
        android:paddingTop="70dp"
        android:paddingLeft="13dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/roundedgetxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>