<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizlayout6">

    <LinearLayout
        android:id="@+id/linearLayout2_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/lessbth_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_view_list_24" />

        <TextView
            android:id="@+id/testnumber_6"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="tests"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/timerview_6"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="00sec"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/scorenum_6"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:text="Score"
            android:textAlignment="center"
            android:textSize="25dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/qustion1_6"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qustion1_6"
        app:layout_constraintVertical_bias="0.0">


        <Button
            android:id="@+id/ansquiz1_6"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bgquizbtn"
            android:text="Button"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ansquiz2_6"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bgquizbtn"
            android:text="Button"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ansquiz3_6"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bgquizbtn"
            android:text="Button"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ansquiz4_6"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bgquizbtn"
            android:text="Button"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>